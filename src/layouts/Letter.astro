---
import ThemeToggle from '../components/ThemeToggle.astro';
import Footer from '../components/Footer.astro';
import Base from './Base.astro';

interface Props {
  title: string;
  lang: string;
  description: string;
}

const {
  title,
  lang,
  description,
} = Astro.props;

---

<Base
  title={title}
  lang={lang}
  description={description}
>
  <header>
    <h1><ThemeToggle /></h1>
  </header>
  <main>
    <slot />
  </main>
  <Footer />
</Base>